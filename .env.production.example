# Production Environment Configuration
# Copy this file to .env.production and fill in real values

# Enable database usage
INGESTOR_USE_DATABASE=true

# MongoDB connection - SET THIS IN PRODUCTION ENVIRONMENT
MONGODB_CONNECTION_STRING=your_production_mongodb_connection_string
MONGODB_DATABASE_NAME=gigateer

# Production settings
NODE_ENV=production

# Web app settings
NEXT_PUBLIC_APP_URL=https://your-production-domain.com
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_CACHE_TTL=300000

# Security settings
NEXTAUTH_URL=https://your-production-domain.com
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# API rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60