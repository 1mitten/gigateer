{
  "name": "gigateer",
  "version": "1.0.0",
  "description": "A web app that aggregates live music/event gigs from multiple sources",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:cache": "pnpm --filter web run test:cache",
    "test:integration": "pnpm --filter web run test:integration",
    "test:coverage": "turbo run test:coverage",
    "test:web": "pnpm --filter web run test:all",
    "typecheck": "turbo run typecheck",
    "ingest:all": "pnpm --filter ingestor run ingest:all",
    "ingest:source": "pnpm --filter ingestor run ingest:source",
    "validate": "pnpm --filter ingestor run validate",
    "merge": "pnpm --filter ingestor run merge",
    "daemon": "pnpm --filter ingestor run daemon",
    "import:scraper-configs": "tsx scripts/import-scraper-configs.ts"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.0.0",
    "glob": "^11.0.3",
    "mongodb": "^6.18.0",
    "tsx": "^4.7.0",
    "turbo": "^1.13.0",
    "typescript": "^5.4.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}