{
  "name": "@gigateer/web",
  "version": "0.1.0",
  "private": true,
  "description": "Gigateer web application",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:cache": "vitest run src/lib/__tests__ src/app/api --reporter=verbose",
    "test:hooks": "vitest run src/hooks/__tests__ --reporter=verbose",
    "test:components": "vitest run src/components/__tests__ --reporter=verbose",
    "test:integration": "vitest run src/__tests__/integration --reporter=verbose",
    "test:all": "npm run test:cache && npm run test:hooks && npm run test:components && npm run test:integration",
    "clean": "rm -rf .next dist coverage"
  },
  "dependencies": {
    "@gigateer/contracts": "workspace:*",
    "@heroicons/react": "^2.2.0",
    "@tanstack/react-query": "^5.84.2",
    "@tanstack/react-query-devtools": "^5.84.2",
    "autoprefixer": "^10.4.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.6.0",
    "framer-motion": "^12.23.12",
    "lru-cache": "^11.1.0",
    "mongodb": "^6.18.0",
    "next": "^14.1.0",
    "next-pwa": "^5.6.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-infinite-scroll-component": "^6.1.0",
    "tailwindcss": "^3.4.0",
    "workbox-webpack-plugin": "^7.0.0",
    "workbox-window": "^7.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.9",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.0",
    "jsdom": "^25.0.1",
    "typescript": "^5.3.0",
    "vite": "^6.0.7",
    "vitest": "^2.1.9"
  }
}