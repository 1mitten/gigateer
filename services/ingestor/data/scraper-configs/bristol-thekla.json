{
  "site": {
    "name": "Thekla Bristol",
    "baseUrl": "https://www.theklabristol.co.uk",
    "source": "bristol-thekla",
    "description": "Floating venue and nightclub on the River Avon in Bristol, UK",
    "maintainer": "gigateer-team",
    "lastUpdated": "2025-08-21"
  },
  
  "browser": {
    "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36",
    "viewport": {
      "width": 1280,
      "height": 720
    },
    "headless": true,
    "timeout": 90000
  },
  
  "rateLimit": {
    "delayBetweenRequests": 3000,
    "maxConcurrent": 1,
    "respectRobotsTxt": true
  },
  
  "workflow": [
    {
      "type": "navigate",
      "url": "https://www.theklabristol.co.uk/live/"
    },
    {
      "type": "wait",
      "timeout": 5000
    },
    {
      "type": "scroll",
      "direction": "down",
      "amount": 3000,
      "waitAfter": 2000
    },
    {
      "type": "scroll",
      "direction": "down",
      "amount": 3000,
      "waitAfter": 2000
    },
    {
      "type": "scroll",
      "direction": "bottom",
      "waitAfter": 3000
    },
    {
      "type": "extract", 
      "containerSelector": ".card.card--full",
      "fields": {
        "title": {
          "selector": ".card__grid-content a.card__heading",
          "attribute": "text",
          "required": true,
          "transform": "trim"
        },
        "artist": {
          "selector": ".card__grid-content a.card__heading",
          "attribute": "text",
          "required": true,
          "transform": "trim"
        },
        "date": {
          "selector": ".card__strip-heading.card__strip-heading--last",
          "attribute": "text",
          "required": true,
          "transform": "thekla-bristol-date"
        },
        "support": {
          "selector": ".card__grid-content p.card__description",
          "attribute": "text",
          "required": false,
          "transform": "trim"
        },
        "eventUrl": {
          "selector": ".card__grid-content a.card__heading",
          "attribute": "href",
          "required": false,
          "transform": "url"
        },
        "ticketsUrl": {
          "selector": "a[href*='ticket'], a[href*='alttickets']",
          "attribute": "href",
          "required": false
        },
        "moreInfoUrl": {
          "selector": ".card__grid-content a.card__heading",
          "attribute": "href",
          "required": false
        },
        "image": {
          "selector": ".card__grid-media img",
          "attribute": "src",
          "required": false
        },
        "eventType": {
          "selector": ".card__strip-heading:first-child",
          "attribute": "text",
          "required": false,
          "transform": "trim"
        }
      },
      "followUp": {
        "urlField": "eventUrl",
        "fields": {
          "fullDescription": {
            "selector": "article p",
            "attribute": "text",
            "transform": "trim"
          },
          "time": {
            "selector": ".single-article__meta-bar li:nth-child(2)",
            "attribute": "text",
            "transform": "trim"
          },
          "price": {
            "selector": ".single-article__meta-bar li:nth-child(3)",
            "attribute": "text",
            "transform": "trim"
          },
          "ageRestriction": {
            "selector": "article p",
            "attribute": "text",
            "transform": "trim"
          }
        }
      }
    }
  ],
  
  "mapping": {
    "id": {
      "strategy": "generated",
      "fields": ["title", "date", "venue"]
    },
    "title": "title",
    "artist": "artist",
    "venue": {
      "name": "Thekla",
      "address": "The Grove, East Mud Dock",
      "city": "Bristol",
      "country": "UK"
    },
    "date": {
      "start": "date",
      "timezone": "Europe/London"
    },
    "urls": {
      "event": "eventUrl",
      "tickets": "ticketsUrl",
      "info": "moreInfoUrl"
    },
    "images": "image",
    "description": "fullDescription",
    "supportAct": "support",
    "tags": "genres",
    "ageRestriction": "ageRestriction",
    "status": "status",
    "time": "time",
    "price": "price"
  },
  
  "validation": {
    "required": [],
    "minEventsExpected": 1,
    "maxEventsExpected": 100
  },
  
  "debug": {
    "screenshots": true,
    "saveHtml": true,
    "logLevel": "debug"
  }
}