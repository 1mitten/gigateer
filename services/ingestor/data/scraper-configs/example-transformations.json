{
  "site": {
    "name": "Example Venue - Transformation Demo",
    "baseUrl": "https://example.com", 
    "source": "example-transformations",
    "description": "Demonstration of all available transformations and features"
  },

  "browser": {
    "timeout": 30000
  },

  "workflow": [
    {
      "type": "navigate", 
      "url": "https://example.com/events"
    },
    {
      "type": "extract",
      "containerSelector": ".event-item",
      "fields": {
        "title": {
          "selector": ".event-title",
          "attribute": "text",
          "transform": "trim"
        },
        
        "timeRangeFull": {
          "selector": ".event-time",
          "attribute": "text",
          "transform": "trim",
          "fallback": "TBA"
        },
        
        "startTime": {
          "selector": ".event-time", 
          "attribute": "text",
          "transform": "time-range-start",
          "fallback": "00:00"
        },
        
        "endTime": {
          "selector": ".event-time",
          "attribute": "text", 
          "transform": "time-range-end",
          "fallback": "23:59"
        },
        
        "slug": {
          "selector": ".event-title",
          "attribute": "text",
          "transform": "slug"
        },
        
        "eventUrl": {
          "selector": ".event-link",
          "attribute": "href", 
          "transform": "url"
        },
        
        "description": {
          "selector": ".event-description",
          "attribute": "text",
          "transform": "trim"
        },
        
        "extractedArtist": {
          "selector": ".event-title",
          "attribute": "text",
          "transform": "extract-text",
          "transformParams": {
            "pattern": "^([^-]+)\\s*-",
            "flags": "i"
          }
        },
        
        "cleanedTitle": {
          "selector": ".event-title", 
          "attribute": "text",
          "transform": "regex",
          "transformParams": {
            "pattern": "\\s*-\\s*SOLD OUT",
            "replacement": "",
            "flags": "gi"
          }
        }
      },
      "followUp": {
        "urlField": "eventUrl",
        "fields": {
          "fullDescription": {
            "selector": ".full-description",
            "attribute": "text",
            "transform": "trim"
          },
          "ticketInfo": {
            "selector": ".ticket-info",
            "attribute": "text",
            "transform": "trim"
          },
          "venueDetails": {
            "selector": ".venue-details",
            "attribute": "text", 
            "transform": "trim"
          }
        }
      }
    }
  ],

  "mapping": {
    "id": {
      "strategy": "generated",
      "fields": ["title", "venue", "startTime"]
    },
    "title": "cleanedTitle",
    "artist": "extractedArtist", 
    "date": {
      "start": "startTime",
      "end": "endTime"
    },
    "urls": {
      "event": "eventUrl"
    },
    "description": "fullDescription"
  },
  
  "validation": {
    "required": [],
    "minEventsExpected": 0,
    "maxEventsExpected": 100
  },
  
  "debug": {
    "screenshots": false,
    "saveHtml": false,
    "logLevel": "info"
  }
}