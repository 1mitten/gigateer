{
  "site": {
    "name": "The Croft",
    "baseUrl": "https://www.thecroftbristol.co.uk",
    "source": "bristol-the-croft",
    "description": "Iconic independent music venue in Bristol, UK",
    "maintainer": "gigateer-team",
    "lastUpdated": "2025-08-21"
  },
  
  "browser": {
    "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36",
    "viewport": {
      "width": 1280,
      "height": 720
    },
    "headless": true,
    "timeout": 60000
  },
  
  "rateLimit": {
    "delayBetweenRequests": 2000,
    "maxConcurrent": 1,
    "respectRobotsTxt": true
  },
  
  "workflow": [
    {
      "type": "navigate",
      "url": "https://www.thecroftbristol.co.uk/whats-on"
    },
    {
      "type": "wait",
      "selector": ".hf__event-listing",
      "condition": "visible",
      "timeout": 45000
    },
    {
      "type": "wait",
      "timeout": 3000
    },
    {
      "type": "extract", 
      "method": "bristol-the-croft",
      "containerSelector": ".hf__event-listing",
      "fields": {
        "title": {
          "selector": ".hf__event-listing--name",
          "attribute": "text",
          "required": false,
          "transform": "trim",
          "fallback": "Event at The Croft"
        },
        "artist": {
          "selector": ".hf__event-listing--name",
          "attribute": "text", 
          "required": false,
          "transform": "trim"
        },
        "dateText": {
          "selector": ".hf__event-listing--date",
          "attribute": "text",
          "required": false,
          "transform": "trim"
        },
        "venue": {
          "selector": ".hf__event-listing--stage-inner",
          "attribute": "text",
          "required": false,
          "transform": "trim",
          "fallback": "The Croft"
        },
        "eventUrl": {
          "selector": ".hf__event-listing--name",
          "attribute": "href",
          "required": false,
          "transform": "url"
        },
        "ticketsUrl": {
          "selector": ".hf__event-listing--name",
          "attribute": "href",
          "required": false
        },
        "infoUrl": {
          "selector": "a[href*='#e']",
          "attribute": "href",
          "required": false
        },
        "image": {
          "selector": ".hf__event-listing--image",
          "attribute": "src",
          "required": false
        },
        "description": {
          "selector": ".hf__event-listing--description p",
          "attribute": "text",
          "required": false,
          "transform": "trim"
        }
      }
    }
  ],
  
  "mapping": {
    "id": {
      "strategy": "generated",
      "fields": ["title", "venue", "dateText"]
    },
    "title": "title",
    "artist": "artist",
    "venue": {
      "name": "The Croft",
      "address": "117-119 Stokes Croft",
      "city": "Bristol",
      "country": "UK"
    },
    "date": {
      "start": {
        "field": "dateText",
        "transform": "croft-bristol-date"
      },
      "timezone": "Europe/London"
    },
    "urls": {
      "event": "eventUrl",
      "tickets": "ticketsUrl",
      "info": "infoUrl"
    },
    "images": "image",
    "description": "description"
  },
  
  "validation": {
    "required": [],
    "minEventsExpected": 0,
    "maxEventsExpected": 500
  },
  
  "debug": {
    "screenshots": false,
    "saveHtml": false,
    "logLevel": "info"
  }
}