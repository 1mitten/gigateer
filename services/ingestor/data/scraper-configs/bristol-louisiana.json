{
  "site": {
    "name": "The Louisiana Bristol",
    "baseUrl": "https://www.thelouisiana.net",
    "source": "bristol-louisiana",
    "description": "Historic pub and music venue in Bristol, UK",
    "maintainer": "gigateer-team",
    "lastUpdated": "2025-08-12"
  },
  
  "browser": {
    "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36",
    "viewport": {
      "width": 1280,
      "height": 720
    },
    "headless": true,
    "timeout": 90000
  },
  
  "rateLimit": {
    "delayBetweenRequests": 2000,
    "maxConcurrent": 1,
    "respectRobotsTxt": true
  },
  
  "workflow": [
    {
      "type": "navigate",
      "url": "https://www.thelouisiana.net/"
    },
    {
      "type": "wait",
      "condition": "networkidle",
      "timeout": 30000
    },
    {
      "type": "wait",
      "timeout": 3000
    },
    {
      "type": "click",
      "selector": ".load-more-btn, button:has-text(\"Load More\")",
      "optional": true,
      "waitAfter": 2000
    },
    {
      "type": "wait",
      "timeout": 2000
    },
    {
      "type": "extract", 
      "containerSelector": ".event-block.clearfix",
      "fields": {
        "title": {
          "selector": ".event-name a",
          "attribute": "text",
          "required": true,
          "transform": "regex",
          "transformParams": {
            "pattern": "^The Louisiana presents:\\s*",
            "replacement": "",
            "flags": "i"
          }
        },
        "artist": {
          "selector": ".event-name",
          "attribute": "text",
          "required": false,
          "transform": "trim",
          "fallback": "TBA"
        },
        "promoter": {
          "selector": ".event-promoter",
          "attribute": "text",
          "required": false,
          "transform": "trim"
        },
        "date": {
          "selector": ".event-date .event-date",
          "attribute": "text",
          "required": true,
          "transform": "trim"
        },
        "time": {
          "selector": ".event-date .event-time",
          "attribute": "text",
          "required": false,
          "transform": "trim"
        },
        "price": {
          "selector": ".event-price",
          "attribute": "text",
          "required": false,
          "transform": "trim",
          "fallback": "TBA"
        },
        "eventUrl": {
          "selector": ".event-name a",
          "attribute": "href",
          "required": true,
          "transform": "url"
        },
        "ticketsUrl": {
          "selector": ".event-page a.next-btn",
          "attribute": "href",
          "required": false,
          "transform": "url"
        },
        "image": {
          "selector": ".event-image",
          "attribute": "src",
          "required": false,
          "transform": "url"
        },
        "imageAlt": {
          "selector": ".event-image",
          "attribute": "alt",
          "required": false,
          "transform": "trim"
        }
      },
      "followUp": {
        "urlField": "eventUrl",
        "fields": {
          "fullDescription": {
            "selector": ".event-details .content, .event-description, .description",
            "attribute": "text",
            "transform": "trim"
          },
          "detailedTime": {
            "selector": ".event-time, .doors-time, .time",
            "attribute": "text",
            "transform": "trim"
          },
          "genres": {
            "selector": ".event-tags .tag, .genre, .music-style",
            "attribute": "text",
            "multiple": true,
            "transform": "trim"
          }
        }
      }
    }
  ],
  
  "mapping": {
    "id": {
      "strategy": "generated",
      "fields": ["title", "date"]
    },
    "title": "title",
    "artist": "artist",
    "venue": {
      "name": "The Louisiana Bristol",
      "address": "Wapping Road",
      "city": "Bristol", 
      "country": "UK"
    },
    "date": {
      "start": "date",
      "time": "time",
      "timezone": "Europe/London"
    },
    "urls": {
      "event": "eventUrl",
      "tickets": "ticketsUrl"
    },
    "images": "image",
    "description": "fullDescription",
    "tags": "genres"
  },
  
  "validation": {
    "required": ["title", "eventUrl"],
    "minEventsExpected": 1,
    "maxEventsExpected": 100
  },
  
  "debug": {
    "screenshots": true,
    "saveHtml": true,
    "logLevel": "debug"
  }
}