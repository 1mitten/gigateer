{
  "site": {
    "name": "The Louisiana Bristol (Test)",
    "baseUrl": "https://www.thelouisiana.net",
    "source": "bristol-louisiana-minimal",
    "description": "Test scraper for minimal validation",
    "maintainer": "gigateer-team",
    "lastUpdated": "2025-01-10"
  },
  
  "browser": {
    "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36",
    "viewport": {
      "width": 1280,
      "height": 720
    },
    "headless": true,
    "timeout": 60000
  },
  
  "rateLimit": {
    "delayBetweenRequests": 2000,
    "maxConcurrent": 1,
    "respectRobotsTxt": true
  },
  
  "workflow": [
    {
      "type": "navigate",
      "url": "https://www.thelouisiana.net/"
    },
    {
      "type": "wait",
      "selector": ".tp-banner",
      "condition": "visible",
      "timeout": 15000
    },
    {
      "type": "wait",
      "timeout": 3000
    },
    {
      "type": "extract", 
      "containerSelector": ".tp-banner ul li",
      "fields": {
        "title": {
          "selector": ".tp-event-title .h2, .slide-title .h2",
          "attribute": "text",
          "required": false,
          "transform": "trim",
          "fallback": "Event at The Louisiana"
        },
        "artist": {
          "selector": ".tp-event-title .h2, .slide-title .h2",
          "attribute": "text",
          "required": false,
          "transform": "trim"
        },
        "date": {
          "selector": ".h2.date, .slide-title .date",
          "attribute": "text",
          "required": false,
          "transform": "trim",
          "fallback": "TBA"
        }
      }
    }
  ],
  
  "mapping": {
    "id": {
      "strategy": "generated",
      "fields": ["title", "date"]
    },
    "title": "title",
    "artist": "artist",
    "venue": {
      "name": "The Louisiana Bristol",
      "address": "Wapping Road",
      "city": "Bristol",
      "country": "UK"
    },
    "date": {
      "start": "date",
      "timezone": "Europe/London"
    }
  },
  
  "validation": {
    "required": [],
    "minEventsExpected": 1,
    "maxEventsExpected": 100
  },
  
  "debug": {
    "screenshots": false,
    "saveHtml": false,
    "logLevel": "info"
  }
}